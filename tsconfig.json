{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.json",
    "src/**/*.ts",
    "config/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "public"
  ]
}