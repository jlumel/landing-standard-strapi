{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*.json",
    "src/**/*.ts",
    "config/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "public"
  ]
}